<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/cv_saldo_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:id="@+id/rl_indicador_semaforo_saldo"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    style="@style/semaforo_saldo_verde"/>
                <LinearLayout
                    android:id="@+id/contenedor_saldo_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:padding="6dp"
                    android:weightSum="5">
                    <LinearLayout
                        android:id="@+id/ll_contenedor_saldo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="@string/tu_saldo_es"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_cantidad_saldo_main"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="MXN $ 0.00"
                            android:layout_weight="1"
                            android:textAlignment="center"/>
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/pb_mientras_carga_saldo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical" />
                    <Button
                        android:id="@+id/btn_recargar_main"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ver_referencia"
                        style="@style/boton_recarga"
                        android:layout_weight="2"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cv_saldo_main">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_saldo_main">
                <GridView
                    android:id="@+id/gv_operaciones_pim"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"/>
                <GridView
                    android:id="@+id/gv_operaciones"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/gv_operaciones_pim"
                    android:numColumns="2" />
            </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_profile_temp"
                    android:padding="15dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/ic_launcher_round"/>
                    <TextView
                        android:id="@+id/tv_nombre_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="@string/nombre"/>
                    <TextView
                        android:id="@+id/tv_nombre_comercio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="@android:color/white"
                        android:text="@string/comercio"/>
                    <TextView
                        android:id="@+id/tv_numero_operador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="@string/operador"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/lv_sliding_main_menu"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:layout_gravity="start"
                    android:background="@android:color/white"
                    android:choiceMode="singleChoice"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_aviso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/morado_yastas"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/tv_terminos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/morado_yastas"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_version_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aqui va la version"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>