<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/sectionChart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:animateLayoutChanges="true"></com.github.mikephil.charting.charts.PieChart>

    <LinearLayout
        android:id="@+id/ly_detalle_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sectionChart"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:gravity="center"
            android:padding="6dp"
            android:text="Ver Operaciones" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_lista_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
