<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FondearSaldo"
    android:padding="4dp">
    <TextView
        android:id="@+id/tv_encabezado_fondear_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:text="@string/selecciona_un_metodo_para_recargar_saldo"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sp_opciones_fondeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_encabezado_fondear_saldo"/>
    <RelativeLayout
        android:id="@+id/rl_contenedor_confirmacion_opciones_fondeo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sp_opciones_fondeo"
        android:paddingTop="4dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_tu_numero_opciones_fondeo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_tu_numero_opciones_fondeo"
            android:layout_above="@+id/tv_instrucciones_opciones_fondeo"
            android:gravity="center">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_codigo_barras_fondeo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_referencia_clabe_opciones_fondeo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"/>
            </android.support.v7.widget.LinearLayoutCompat>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_instrucciones_opciones_fondeo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_contenedor_botones_opciones_fondeo"/>
        <LinearLayout
            android:id="@+id/ll_contenedor_botones_opciones_fondeo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="6dp"
            android:layout_above="@+id/tv_recordatorio_opciones_fondeo">
            <Button
                android:id="@+id/btn_guardar_opciones_fondeo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boton_recarga"
                android:text="@string/guardar"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginRight="6dp"/>
            <Button
                android:id="@+id/btn_compartir_opciones_fondeo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boton_recarga"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="6dp"
                android:text="@string/compartir"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_recordatorio_opciones_fondeo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>